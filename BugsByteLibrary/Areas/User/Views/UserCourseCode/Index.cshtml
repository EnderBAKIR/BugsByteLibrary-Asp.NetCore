@model List<CourseCode>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}


<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">İstekde Bulunduğunuz Kurs Kodlarını Buradan Görebilirsiniz</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Kurs İstekleriniz
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">

                                <tr>
                                    <th>Kurs Id</th>
                                    <th>Kodu İstenilen Kurs</th>
                                    <th>Kodunuz</th>


                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.CourseId</td>
                                        <td>@item.CourseRequest.Name</td>
                                        <td>
                                            @if (item.Status == true)
                                            {
                                                <p>@item.Code</p>
                                            }
                                            else
                                            {
                                                <p>Bekleniyor</p>
                                            }
                                        </td>






                                    </tr>

                                }


                            </table>





                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>






