@model Blog
@{
    ViewData["Title"] = "AddBlog";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}


<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <h1>Blok Ekle</h1>

            <form method="post" asp-action="AddBlog" asp-controller="UserBlog" enctype="multipart/form-data">

                <div class="form-group">
                    <label for="Name">Başlık:</label>
                    <input type="text" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Title"> Blog İçeriği:</label>
                    <input type="text" asp-for="Content" />
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Description" class="form-label">Kısa Açıklama</label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Image">Resim:</label>
                    <input type="file" asp-for="Image" />

                </div>
                <div class="form-group">
                    <label>Kategoriler:</label>
                    <br />
                    @foreach (var category in ViewBag.Categories)
                    {
                        <input type="checkbox" name="SelectedCategoryIds" value="@category.Id" />
                        <label>@category.Name</label>

                        <br />
                    }
                    <span asp-validation-for="BlogCategories" class="text-danger"></span>
                </div>
                <button class="btn btn-primary">Ekle</button>
            </form>


        </div>
    </div>
</div>
@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tinymce/6.7.0/tinymce.min.js"></script>
    <script>
        tinymce.init({
            selector: '#Content'
        });
    </script>

}
