@model List<OpenToWork>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">İş Başvurularınız ile ilgili işlemleri bu sayfadan yapabilirsiniz</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        İş Başvurularınız
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">

                                <tr>
                                    <th>Başvuru Id</th>
                                    <th>Başvurulan İş</th>
                                    <th>Durum</th>
                                    <th>İşlemler</th>

                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Hiring.Name</td>
                                        <td>
                                            @if (item.Status == true)
                                            {
                                                <p>Beklemede</p>
                                            }
                                            else
                                            {
                                                <p>Red Edildi</p>
                                            }
                                        </td>

                                        <td>
                                            @if (item.Status == true)
                                            {
                                                
                                            }
                                            else
                                            {
                                                <a class="btn btn-success" asp-area="" asp-controller="Hirings" asp-action="Index">Yeni İşlere Göz Atın</a>
                                            }


                                        </td>




                                    </tr>

                                }


                            </table>





                        </div>
                    </div>
                </div>
            </div>
