@model List<Category>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Kategori İşlemleri</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div>
                        <h2>  <a asp-area="Admin" asp-controller="BlogCategories" asp-action="AddCategory">Yeni Kategori Ekle</a>    </h2>
                    </div>
                    <div class="panel-heading">
                        BugsByteLibrary'nin Kategorileri
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">



                                
                                
                                    <thead>
                                        <tr>

                                            <th>İsim</th>
                                            <th>Güncelle</th>
                                            <th>Sil</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {


                                            <tr>

                                                <td>@item.Name</td>
                                                <td><a href="/Admin/BlogCategories/EditCategory/@item.Id">Güncelle</a></td>
                                                <td><a href="/Admin/BlogCategories/DeleteCategory/@item.Id">Sil</a></td>

                                            </tr>
                                        }

                                    </tbody>
                                </table>

                                
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

