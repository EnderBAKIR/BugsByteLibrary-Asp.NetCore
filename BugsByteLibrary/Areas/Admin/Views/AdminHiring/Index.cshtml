@model List<Hiring>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">İş Başvuru İşlemleri</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div>
                        <h2>  <a asp-area="Admin" asp-controller="AdminHiring" asp-action="AddHiring">Yeni Çalışan Arama Formu Oluştur</a>    </h2>
                    </div>
                    <div class="panel-heading">
                        İş Başvuru Formları
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>HiringId</th>
                                        <th>İş İsmi</th>
                                        <th>Başvuran Sayısı</th>
                                        <th>Oluşturulma Tarihi</th>
                                        <th>Güncellenme Tarihi</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {

                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.Name</td>
                                            @if (item.OpenToWorks != null)
                                            {
                                                <td>@item.OpenToWorks.Count</td>
                                            }
                                            else
                                            {
                                                <td>Henüz Başvuran Yok</td>
                                            }
                                            <td>@item.CreatedTime.ToShortDateString()</td>
                                            <td>@item.UpdateDate?.ToShortDateString()</td>
                                            <td>
                                                @if (item.Status == true)
                                                {
                                                    <a asp-area="Admin" asp-controller="AdminHiring" asp-action="ChangeStatusFalse" asp-route-id="@item.Id" class="btn btn-warning">Askıya Al</a>
                                                }
                                                else
                                                {
                                                    <a asp-area="Admin" asp-controller="AdminHiring" asp-action="ChangeStatusTrue" asp-route-id="@item.Id" class="btn btn-warning">Askıdan Kaldır</a>
                                                }
                                                <a asp-area="Admin" asp-controller="AdminHiring" asp-action="DeleteBlog" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>

                                            </td>
                                        </tr>




                                    }

                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
        </div>
    </div>
</div>

