@model List<CourseRequest>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Kurs İşlemleri</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div>
                        <h2>  <a asp-area="Admin" asp-controller="AdminCourse" asp-action="AddCourse">Yeni Bir Kurs Ekle</a>    </h2>
                    </div>
                    <div class="panel-heading">
                        Kurslar
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Kurs Id</th>
                                        <th>Kurs İsmi</th>
                                        <th>İstek Sayısı</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {

                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.Name</td>
                                            @if (item.CourseCodes.Any())
                                            {
                                                <td>
                                                    @item.CourseCodes.Count
                                                    <a class="btn btn-success" asp-area="Admin" asp-controller="AdminCourse" asp-action="GetCourseDetails" asp-route-id="@item.Id">Kurs Detayları</a>
                                                </td>

                                            }
                                            else
                                            {
                                                <td>Henüz Kod İsteği Yapan Yok</td>
                                            }
                                            
                                            <td>
                                                @if (item.Status == true)
                                                {
                                                    <a asp-area="Admin" asp-controller="AdminCourse" asp-action="ChangeStatusFalse" asp-route-id="@item.Id" class="btn btn-warning">Askıya Al</a>
                                                }
                                                else
                                                {
                                                    <a asp-area="Admin" asp-controller="AdminCourse" asp-action="ChangeStatusTrue" asp-route-id="@item.Id" class="btn btn-primary">Askıdan Kaldır</a>
                                                }
                                                <a asp-area="Admin" asp-controller="AdminCourse" asp-action="DeleteCourse" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
                                                <a asp-area="Admin" asp-controller="AdminCourse" asp-action="UpdateCourse" asp-route-id="@item.Id" class="btn btn-success">Güncelle</a>


                                            </td>
                                        </tr>




                                    }

                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
        </div>
    </div>
</div>

