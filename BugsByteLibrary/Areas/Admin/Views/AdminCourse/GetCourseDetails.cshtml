@model CourseRequest
@{
    ViewData["Title"] = "GetCourseDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">İş Başvuru İşlemleri</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div>
                        <h2>  <a asp-area="Admin" asp-controller="AdminHiring" asp-action="AddHiring">Yeni Çalışan Arama Formu Oluştur</a>    </h2>
                    </div>
                    <div class="panel-heading">
                        @Model.Name e/a yapılan başvurular
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>İstek Id</th>
                                        <th>İsteyen İsim</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.CourseCodes)
                                    {

                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.AppUser.UserName</td>
                                            

                                                
                                           
                                            <td>
                                                @if (item.Status == false)
                                                {
                                                    <form method="post" asp-action="AddCode" asp-controller="AdminCourse">
                                                        <input type="hidden" name="AppUserId" value="@item.AppUserId" />
                                                        <input type="hidden" name="Id" value="@item.Id" />
                                                        <input type="hidden" name="CourseId" value="@Model.Id" />
                                                        <input type="hidden" name="Status" value="True" />
                                                        <input type="text" name="Code" />
                                                        <button class="btn btn-success">Kodu Tanımla</button>
                                                    </form>
                                                }
                                                else
                                                {
                                                     <p class="btn btn-success">Kod Tanımlandı</p>
                                                }
                                              

                                            </td>
                                        </tr>




                                    }

                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
        </div>
    </div>
</div>

