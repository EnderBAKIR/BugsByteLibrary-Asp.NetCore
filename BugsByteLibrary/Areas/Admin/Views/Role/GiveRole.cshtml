@model List<GiveRoleViewModel>
@{
    ViewData["Title"] = "GiveRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <hr />
                <h1 class="page-header">Rolü Ata</h1>
            </div>
           
            <br />

            <form method="post">

                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="form-check">
                        <input type="hidden" asp-for="@Model[i].RoleId" />
                        <input type="hidden" asp-for="@Model[i].RoleName" />
                        <input type="checkbox" asp-for="@Model[i].RoleExist" class="form-check-input" />
                        <label class="form-check-label" for="@Model[i].RoleExist">@Model[i].RoleName</label>
                    </div>
                }
                <button class="btn btn-outline-primary">Rol Bilgisini Kaydet</button>




            </form>
        </div>
    </div>
</div>