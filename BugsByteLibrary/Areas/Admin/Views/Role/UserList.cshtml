@model List<AppUser>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Kullanıcılar Ve Rol İşlemleri</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Kullanıcılar Ve Rolleri
                    </div>

                    <h1>Kullanıcı Listesi</h1>
                    <table class="table table-bordered">

                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Kullanıcı Adı</th>
                                <th>Rol Ver</th>



                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count > 0)
                            {


                                @foreach (var item in Model)
                                {
                                    count++;

                                    <tr>
                                        <td>@count</td>
                                        <td>@item.Name</td>
                                        <td><a class="btn btn-outline-primary" href="/Admin/Role/GiveRole/@item.Id">Rol Ver Veya Güncelle</a></td>
                                    </tr>


                                }
                            }
                            else
                            {
                                <div>
                                    <span class="alert-danger"> Henüz Bir Kullanıcı Yok </span>
                                </div>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
