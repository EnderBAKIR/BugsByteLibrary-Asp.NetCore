@model List<AppUser>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 0;
}


    
<h1>UserList</h1>
<table class="table table-bordered">

    <thead>
        <tr>
            <th>#</th>
            <th>Kullanıcı Adı</th>
            <th>Rol Ver</th>
           

        </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {


            @foreach (var item in Model)
            {
                count++;

                <tr>
                    <td>@count</td>
                    <td>@item.Name</td>
                    <td><a class="btn btn-outline-primary" href="/Admin/Role/GiveRole/@item.Id">Rol Ver</a></td>
                </tr>


            }
        }
        else
        {
            <div>
                <span class="alert-danger"> Henüz Bir Kullanıcı Yok </span>
            </div>
        }

    </tbody>
</table>
