@model List<Blog>
@{
    ViewData["Title"] = "GetAllBlogs";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<div class="bgded overlay" style="background-image:url('/jeren/images/demo/backgrounds/02.png');">
    <div id="breadcrumb" class="hoc clear">
        <!-- ################################################################################################ -->
        <ul>
            <li>Bugları çözmek bir tık uzağınızda</li>
            <li><a href="/Blog/Index">Kategorileri Görmek İçin Tıklayın</a></li>

        </ul>
        <!-- ################################################################################################ -->
    </div>
</div>
<!-- ################################################################################################ -->
<!-- ################################################################################################ -->
<!-- ################################################################################################ -->
<div class="wrapper row3">
    <main class="hoc container clear">
        <!-- main body -->
        <!-- ################################################################################################ -->
        <div class="content">
            <!-- ################################################################################################ -->
            <div id="gallery">
                <figure>

                    <ul class="blog-list">

                        @foreach (var item in Model)
                        {
                            @if (item.Status==true && item.InformationBlog==false && item.CodeBank==false)
                            {
                                <li class="one_quarter">


                                    <div class="card" style="width: 18rem;">
                                        <img src="/mainblogimage/mainblogesimage.jpg" class="card-img-top" alt="...">
                                        <div class="card-body">
                                            <h5 class="card-title">@item.Name</h5>
                                            <p class="card-text">@item.Description</p>
                                            <a asp-controller="Blog" asp-action="GetBlogDetails" asp-route-id="@item.Id" class="btn btn-primary">Bakalım Neler Var</a>
                                        </div>
                                    </div>

                                </li>
                            }

                            
                        }


                    </ul>

                </figure>
            </div>
        </div>
        <div class="clear"></div>
    </main>
</div>

