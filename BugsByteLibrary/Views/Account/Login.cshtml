@model UserLoginViewModel




<div class="tab-pane active" id="Login">
    <form asp-controller="Account" asp-action="Login" role="form" class="form-horizontal">
        <div class="form-group">
            <div class="col-sm-12">
                <input asp-for="UserName" class="form-control"  placeholder="Kullanıcı Adı" type="text">
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-12">
                <input asp-for="Password" class="form-control" id="exampleInputPassword1" placeholder="Şifreniz" type="password">
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-light btn-radius btn-brd grd1">
                    Giriş Yap
                </button>
                <a class="for-pwd" href="/smartEDU/javascript:;">Şifreninizi mi unuttunuz</a>
            </div>
        </div>
    </form>

</div>
