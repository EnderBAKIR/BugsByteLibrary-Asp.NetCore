@model List<Hiring>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}


<div class="bgded overlay" style="background-image:url('/jeren/images/demo/backgrounds/02.png');">
    <div id="breadcrumb" class="hoc clear">
        <!-- ################################################################################################ -->
        <ul>
            <li>Ekipten Biri Olmak İster Misiniz?</li>
            <li> Öyleyse Hemen Aşağıdaki Başvurulardan Birine Gidin</li>

        </ul>
        <!-- ################################################################################################ -->
    </div>
</div>
<!-- ################################################################################################ -->
<!-- ################################################################################################ -->
<!-- ################################################################################################ -->
<div class="wrapper row3">
    <main class="hoc container clear">
        <!-- main body -->
        <!-- ################################################################################################ -->
        <div class="content">
            <!-- ################################################################################################ -->
            <div id="gallery">
                <figure>

                    <ul class="nospace clear">

                        @foreach (var item in Model)
                        {
                            @if (item.Status == true)
                            {
                                <li class="one_quarter">


                                    <div class="card" style="width: 18rem;">
                                        <img src="/mainblogimage/Hiring.jpg" class="card-img-top" alt="...">
                                        <div class="card-body">
                                            <h5 class="card-title">@item.Name</h5>
                                            <p class="card-text">@item.Description</p>
                                            <a asp-controller="Hirings" asp-action="GetHiringDetail" asp-route-id="@item.Id" class="btn btn-primary">Başvur</a>
                                        </div>
                                    </div>

                                </li>
                            }


                        }


                    </ul>

                </figure>
            </div>
        </div>
        <div class="clear"></div>
    </main>
</div>

